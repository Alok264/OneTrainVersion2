<%- include('partials/header') -%>
<div class="text-center">
    <span class="signup-warning fw-bold text-danger"><%= userWarning %></span>
</div>
<section id="login">
    <main class="form-signin">
        <form method="post" action="/signup" class="login-form">
            <div class="row">
                <div class="col form-floating">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Name" name="first_name" required>
                    <label for="floatingInput" class="name-label">First Name</label>
                </div>
                <div class="col form-floating">
                    <input type="text" class="form-control" id="floatingInput1" placeholder="Kumar" name="last_name" required>
                    <label for="floatingInput1" class="name-label">Last Name</label>
                </div>
            </div>
            <div class="form-floating">
                <input type="email" class="form-control signup-email" id="floatingInput" placeholder="name@example.com" name="username" required>
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control signup-password password" id="floatingPassword" placeholder="Password" name="password" required>
                <label for="floatingPassword" class="password-label">Password</label>
            </div>
            <span class="error-message err"></span>
            <div class="form-floating">
                <input type="password" class="form-control signup-password confirm-password" id="floatingPassword" placeholder="Password" name="confirm-password" required autocomplete="off">
                <label for="floatingPassword" class="password-label">Confirm Password</label>
            </div>
            <span class="confirm-error-message err"></span>
            <button class="w-100 btn btn-lg btn-success signup-button" type="submit" disabled>Sign Up</button>
            <p class="forgot-password">Already a OneTrain user? <a href="/login">Signin/Login here</a></p>
        </form>
        <div class="Choice">
            <div class="row Authentication">
                <div class="col-sm-6 card-body with">
                    <a class="btn btn-block btn-google" href="/auth/google" role="button">
                        <i class="fab fa-google"></i>
                        Google
                    </a>
                </div>
                <div class="col-sm-6 card-body with">
                    <a class="btn btn-block btn-facebook" href="/auth/facebook" role="button">
                        <i class="fab fa-facebook"></i>
                        Facebook
                    </a>
                </div>
            </div>
        </div>
    </main>
</section>
<%- include('partials/footer') -%>