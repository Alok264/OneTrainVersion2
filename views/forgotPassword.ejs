<%- include('partials/header') -%>
<section id="forgotPassword">
    <form action="/forgotPassword" method="post" class="forgotPasswordinput">
        <div class="form-floating mb-3 forgotPassword-input ">
            <input type="email" class="form-control forgotPassword" id="floatingInput" placeholder="abc@gmail.com" autocomplete="off" name="email">
            <label for="floatingInput">Enter Your Registered Email</label>
        </div>
        <div class="form-floating mb-3 forgotPassword-button">
            <button type="submit" class="btn btn-success forgotPassword-search"><h4 class="h4">Search</h4></button>
        </div>
    </form>
    <div class="notFoundWarning text-danger fw-bold">
        <span class="notFoundWarningMessage"><%= notFoundWarning %></span>
    </div>
</section>
<%- include('partials/footer') -%>